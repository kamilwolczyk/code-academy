                <tr>
                    <td>@Html.LabelFor(model => model.HouseNumber)</td>
                    <td>@Html.TextBoxFor(model => model.HouseNumber)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.City)</td>
                    <td>@Html.TextBoxFor(model => model.City)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.CityCode)</td>
                    <td>@Html.TextBoxFor(model => model.CityCode)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.BirthDate)</td>
                    <td>@Html.TextBoxFor(model => model.BirthDate)</td>
                </tr>
