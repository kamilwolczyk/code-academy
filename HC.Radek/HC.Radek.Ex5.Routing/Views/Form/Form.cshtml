@using HC.Radek.Ex5.Routing.Extensions;
@model HC.Radek.Ex5.Routing.Models.Person
@{
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
 
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <table>
                <tr>
                    <td>@Html.LabelFor(model => model.FirstName)</td>
