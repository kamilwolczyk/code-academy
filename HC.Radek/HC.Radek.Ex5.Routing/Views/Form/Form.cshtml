@model HC.Radek.Ex5.Routing.Models.Person
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Form</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <table>
                <tr>
                    <td>@Html.LabelFor(model => model.FirstName)</td>
                    <td>@Html.TextBoxFor(model => model.FirstName)  </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.LastName)</td>
                    <td>@Html.TextBoxFor(model => model.LastName)  </td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Age)</td>
                    <td>@Html.TextBoxFor(model => model.Age)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Address)</td>
                    <td>@Html.TextBoxFor(model => model.Address)</td>
                </tr>
                <tr>
                    <td colspan="2"><input type="submit" name="submit" value="add" /></td>
                    
                </tr>
            </table>
        }
